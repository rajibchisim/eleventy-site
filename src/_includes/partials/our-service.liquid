<div class="text-gray-700 bg-indigo-100 bg-opacity-25">
    <div class="container py-16 mx-auto">
        
        {% unless hideHeader %} 
        {% render 'partials/section-header' title: 'Our Services', excerpt: 'Malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae.'  %}
        {% endunless %}
        
        <div class="flex flex-wrap">
            {% for service in services %}
            <div class="w-full p-4 lg:w-1/3">
                <div class="h-full px-4 py-6 transition-transform duration-500 transform translate-y-16 bg-white border rounded hover:shadow-lg service">
                    <div class="flex mb-4 text-2xl">
                        <div class="mr-4">
                            <i class="fa {{ service.icon }}"></i>
                        </div>
                        <h4>{{ service.title }}</h4>
                    </div>
                    <div class="font-light font-roboto">
                        <p>{{ service.body }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
