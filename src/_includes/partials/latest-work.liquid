<div class="container py-16 mx-auto">
    
    {% render 'partials/section-header' title: portfolios.title, excerpt: portfolios.excerpt  %}

    
    <div class="flex flex-wrap">
        {% for portfolio in portfolios.items %}
        <div class="w-full p-4 md:w-1/2 lg:w-1/3">
            <div>
                <div class="relative mb-4 text-center group">
                    <img class="inline-block" src="{{  portfolio.image | default: "assets/img/portfolio1.jpg" | url }}" alt="portfolio-image" loading="lazy">
                    <div class="absolute top-0 left-0 flex items-center justify-center w-full h-full transition-colors duration-300 bg-indigo-400 bg-opacity-0 group-hover:bg-opacity-100">
                        <a href="#" class="px-8 py-3 transition-opacity bg-white rounded opacity-0 group-hover:opacity-100">View Case Study</a>
                    </div>
                </div>
                <div class="text-center">
                    <a href="#"><h3 class="text-xl">{{ portfolio.title }}</h3></a>
                    <span class="text-sm">{{ portfolio.body }}</span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    <div class="mt-10 text-center">
        <a href="#" class="px-6 py-3 font-semibold text-white bg-indigo-400 rounded">More Works</a>
    </div>
    
</div>