<div class="container py-16 mx-auto">
    
    {% render 'partials/section-header' title: 'Latest Work', excerpt: 'Malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae.'  %}

    
    <div class="flex flex-wrap">
        {% for portfolio in portfolios %}
        <div class="w-1/3 p-4">
            <div>
                <div class="relative mb-4 group">
                    <img src="{{  portfolio.image | url}}" alt="portfolio-image">
                    <div class="absolute top-0 left-0 flex items-center justify-center w-full h-full group-hover:bg-indigo-400">
                        <a href="#" class="px-8 py-3 bg-white rounded opacity-0 group-hover:opacity-100">View Case Study</a>
                    </div>
                </div>
                <div class="text-center">
                    <a href="#"><h3 class="text-xl">{{ portfolio.title }}</h3></a>
                    <span class="text-sm">{{ portfolio.body }}</span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    <div class="mt-10 text-center">
        <a href="#" class="px-6 py-3 font-semibold text-white bg-indigo-400 rounded">More Works</a>
    </div>
    
</div>