<footer class="text-gray-400">
    <div class="bg-gray-700">
        <div class="container pt-5 mx-auto">
            <div class="flex flex-wrap">
                <div class="md:w-1/2 lg:w-1/4">
                    <div class="p-4">
                        <h4 class="mb-3 text-xl">{{ aboutus.text }}</h4>
                        {% for para in aboutus.items %}
                        <p class="mb-2">{{ para.text }}</p>
                        {% endfor %}
                    </div>
                </div>
                <div class="md:w-1/2 lg:w-1/4">
                    <div class="p-4">
                        <h4 class="mb-3 text-xl">Company</h4>
                        <ul>
                            {% for link in quicklinks %}
                            <li class="mb-2"><a href="{{ link.url }}">{{ link.text }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="md:w-1/2 lg:w-1/4">
                    <div class="p-4">
                        <h4 class="mb-3 text-xl">Recent Posts</h4>
                        {% for article in recentPosts limit: 3 %}
                        <div class="flex mb-3">
                            <a href="#">
                                <img src="https://simplesite-blog-rajibchisim.netlify.app/.netlify/large-media/{{ article.featured }}" loading="lazy" class="w-28" alt="">
                            </a>
                            <div class="ml-3">
                                <h5>
                                    <a href="#">{{ article.title }}</a>
                                </h5>
                                <span class="text-sm text-gray-500">{{ article.date | date: "%a, %b %d, %Y" }}</span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="md:w-1/2 lg:w-1/4">
                    <div class="p-4">
                        <h4 class="mb-3 text-xl">Address</h4>
                        <h5>{{ settings.company }}</h5>
                        {% for address in settings.address %}
                        <p>{{ address.line }}</p>
                        {% endfor%}
                        <p>P:{{ settings.phone }}</p>
                        <h4 class="mt-3 mb-2">Newsletter</h4>
                        
                        <form action="#" class="flex">
                            <input placeholder="Enter your email" type="email" class="min-w-0 px-4 py-1 bg-gray-800 rounded-tl rounded-bl">
                            <button class="inline-block px-2 bg-blue-700 rounded-tr rounded-br"><i class="fa fa-paper-plane"></i></button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-gray-800">
        <div class="container mx-auto">
            <div class="px-4 py-3">
                Â© example.com All Rights Reserved.
            </div>
        </div>
    </div>
</footer>