<div class="relative w-full">
    <div id="hero-slide">
        <div class="glide__bullets" data-glide-el="controls[nav]">
            {% for i in sliders %}
            <button class="glide__bullet" data-glide-dir="={{ forloop.index | minus: 1 }}"></button>
            {% endfor %}
        </div>
