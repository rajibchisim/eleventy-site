<div class="w-full">
    <div id="hero-slide">
        <div class="glide__bullets" data-glide-el="controls[nav]">
            <button class="glide__bullet" data-glide-dir="=0"></button>
            <button class="glide__bullet" data-glide-dir="=1"></button>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
            <button class="left-0 text-gray-800 glide__arrow" data-glide-dir="<"
                style="background-color: rgba(255, 255, 255, .25);  border: 0; border-radius: 0;"><i class="fa fa-arrow-circle-left"></i></button>
            <button class="right-0 text-gray-800 glide__arrow" data-glide-dir=">"
                style="background-color: rgba(255, 255, 255, .25); border: 0; border-radius: 0;"><i class="fa fa-arrow-circle-right"></i></button>
        </div>
        <div data-glide-el="track" class="glide__track">
            <div class="glide__slides">
                {% for slider in sliders %}
                <div class="glide__slide">
                    <div class="bg-center bg-cover" style="background-image: url({{ slider.image }}); height: 715px;">
                        <div class="container flex items-center h-full mx-auto">
                            <div class="w-1/2">
                                <div class="text-white">
                                    <h2 class="mb-6 text-6xl font-bold">{{ slider.title }}</h2>
                                    <p class="text-2xl font-light">{{ slider.body }}</p>
                                    <div class="mt-6">
                                        <a href="#" class="inline-block px-4 py-3 mr-3 bg-yellow-600 rounded-md">Learn More</a>
                                        <a href="#" class="inline-block px-4 py-3 mr-3 bg-yellow-600 rounded-md">Live Preview</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>