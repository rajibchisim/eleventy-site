<div class="py-16 bg-blue-400">
    <div class="container mx-auto">
        {% render 'partials/section-header',
         title: 'Clients Review',
         exerpt: 'Malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae.' %}
         
        <div class="w-10/12 mx-auto">
            <div class="font-thin text-gray-500 glide font-roboto">
                <div class="glide__bullets" data-glide-el="controls[nav]" style="bottom: -16px;">
                    <button class="glide__bullet" data-glide-dir="=0"></button>
                    <button class="glide__bullet" data-glide-dir="=1"></button>
                </div>
                <div class="glide__arrows" data-glide-el="controls">
                    <button class="glide__arrow glide__arrow--left" data-glide-dir="<"
                        style="left: -48px;"><i class="fa fa-arrow-circle-left"></i></button>
                    <button class="glide__arrow glide__arrow--right" data-glide-dir=">"
                        style="right: -48px;"><i class="fa fa-arrow-circle-right"></i></button>
                </div>
                <div data-glide-el="track" class="glide__track">
                    <div class="glide__slides">
                        {% for testimony in testimonials %}
                        <div class="glide__slide">
                            <div class="p-4 py-6 text-center bg-white rounded-md">
                                <p>{{ testimony.message }}</p>
                                <div class="mt-5">
                                    <div class="mb-4 text-center">
                                        <img class="inline-block w-16 h-16 rounded-full" src="{{ 'assets/img/client.jpg' | url }}" alt="client">
                                    </div>
                                    <div>
                                        <h4 class="text-xl">{{ testimony.name }}</h4>
                                        <span class="text-sm">{{ testimony.role }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>