---
layout: "base"
---
{% layout 'layouts/archive' %}
{% block main %}

    {% assign posts =  collections.blog %}
    {% for post in posts reversed %}
    <div class="mb-5">
        <h1 class="mb-2 text-2xl">{{ post.data.title }}</h1>
        <p><span>Published at: {{ post.data.date | date: "%b %d, %y" }} | </span><span>By: {{ post.data.author }}</span></p>
        <p class="mb-3">{{ post.data.description }}</p>
        <a class="inline-block px-3 py-1 text-green-500 border border-current" href="{{ post.url }}">Read more</a>
    </div>
    {% endfor %}
    
{% endblock %}


{% block side %}

    {% assign bloglinksByMonth =  collections.blogsGroupedByMonth %}
    <h1 class="mb-3 text-2xl">Blogs by month</h1>
    <ul>
        {% for blogMonth in bloglinksByMonth reversed %}
        <li class="mb-3">
            <h1 class="text-xl">{{ blogMonth.name | date: "%B, %Y"}}</h1>
            <ul class="ml-2">
                {% for post in blogMonth.posts %}
                <li><a href="{{ post.url }} ">{{ post.title }}</a></li>
                {% endfor %}
            </ul>
        </li>
        {% endfor %}
    </ul>

{% endblock %}